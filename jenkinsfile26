pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                echo 'GIT clone'
                git 'https://github.com/victoreze07/DevOpsClassCodes-aug.git'
            }
        }
        stage('Compile') {
            steps {
                echo 'Compile the code'
                sh 'mvn compile'
            }
        }
        stage('Test') {
            steps {
                echo 'Test the code'
                sh 'mvn test'
            }
        }
        stage('Package') {
            steps {
                echo 'Package the code'
                sh 'mvn package'
            }
        }
        stage('docker build') {
            steps {
                echo 'docker build -t victoreze07/addressbook:${BUILD_NUMBER} .'
            }
        }
        stage('docker login') {
            steps {
                echo 'Login to Dockerhub'
                sh 'docker login -u victoreze07 -p Incredible@1'
            }
        }
        stage('docker push') {
            steps {
                echo 'Push image to docker'
                sh 'docker push victoreze07/addressbook:${BUILD_NUMBER} '
            }
        }
    }
}
